enable_audio_bell no
cursor_trail 0
confirm_os_window_close 0
include hyde.conf

# Add your custom configurations here
font_size 10
bold_font        auto
italic_font      auto
bold_italic_font auto
tab_bar_edge                bottom
tab_bar_style               powerline
tab_powerline_style         slanted
tab_title_template          {title}{' :{}:'.format(num_windows) if num_windows > 1 else ''}
map ctrl+shift+t            new_tab_with_cwd


foreground              #FFFFFF
background              #050910
selection_foreground    #050910
selection_background    #FFFFFF
cursor                  #3ACDF1
cursor_text_color       #12100F

active_tab_foreground     #050910
active_tab_background     #305B89
inactive_tab_foreground   #305B89
inactive_tab_background   #050910

# black
color0      #293852
color8      #576B8F

# red
color1      #CCF5FF
color9      #AAE2F0

# green
color2      #CCE0FF
color10     #AAC5F0

# yellow
